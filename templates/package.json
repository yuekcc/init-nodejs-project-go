{
    "name": "{{.ProjectName}}",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
      "test": "echo \"Error: no test specified\" && exit 1"
    },
    "author": "{{.Author}}",
    "license": "{{.License}}",
    "prettier": {
      "printWidth": 120,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "all",
      "arrowParens": "avoid",
      "endOfLine": "auto"
    },
    "eslintConfig": {
      "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true,
        "jest": true,
        "mocha": true,
        "node": true
      },
      "parserOptions": {
        "sourceType": "module"
      },
      "plugins": [
        "prettier"
      ],
      "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
      ]
    },
    "devDependencies": {
      "eslint": "^7.32.0",
      "eslint-config-prettier": "^8.3.0",
      "eslint-plugin-prettier": "^4.0.0",
      "prettier": "^2.4.0"
    }
  }
